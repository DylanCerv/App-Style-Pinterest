<%- include('template/head', {titleH: '- Perfil'})  %>
<body>
    <%- include('template/nav.ejs') %>
    
    <div class="body perfil">
        <div class="contentP0">
            <div class="back">
                <a href="javascript:history.back()" class="BackButton">
                    <svg class="Hn_ gUZ R19 U9O kVc" height="20" width="20" viewBox="0 0 24 24" aria-hidden="true" aria-label="" role="img">
                        <path d="M8.415 4.586a2 2 0 1 1 2.828 2.828L8.657 10H21a2 2 0 0 1 0 4H8.657l2.586 2.586a2 2 0 1 1-2.828 2.828L1 12l7.415-7.414z">
                        </path>
                    </svg>
                </a>
                <h3>Regresar</h3>
            </div>
            <div class="contentP">
                <div class="container-imgP">
                    <img src="<%= imagenP.ruta %>" alt="" class="card-img-top">
                </div>
                <div class="container-texts">
                    <div class="container-textsP">
                        <p class="date"><%= formatoFecha(imagenP.fechaCracion) %></p>
                        <h1 class="card-title"><%= imagenP.titulo %></h1>
                        <% if(imagenP.descripcion != ''){%>
                            <hr>
                            <p class="card-text"><%= imagenP.descripcion %></p>
                        <% } %>
                    </div>
                    <div class="btns">
                        <a href="/img/<%= imagenP._id %>/delete" class="delete-pin">Eliminar</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="contentMoreResult">
            <div class="titleMore">
                <h3>Mas Resultados</h3>
            </div>
            <div class="grid-container">
                <%  
                    imagenes.forEach((img)=>{ 
                        if (JSON.stringify(img._id) != JSON.stringify(imagenP._id)){
                %>
                            <div class="mult">
                                <a href="/img/<%= img._id %>">
                                    <img src="<%= img.ruta %>" alt="">
                                </a>
                                <div class="titulo">
                                    <h5 class="card-title"><%= img.titulo %></h5>
                                </div>
                            </div>
                <%  
                         }
                    }) 
                %>
            </div>
        </div>
    </div>


    
<%- include('template/footer.ejs') %>
